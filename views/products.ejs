<link rel="stylesheet" href="/css/products.css">
<section class="section-bg">
    <div class="container">

        <div class="row">
            <div class="col-xl-12">
                <div class="section-title">
                    <h2>Products</h2>
                </div>
            </div>
        </div>
        <div class="row flex review-main">
            <% for(product of products) { %>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <%- include('_product-card.ejs'); %>
                </div>
            <% } %>
        </div>
        <div class="row button-center">
            <div class="col-xl-6 centered">
                <a href="#" id="loadMore" class="bttn-def"><span>load more</span></a>
            </div>
        </div>

    </div>
</section> 
<script src="/js/product.js"></script>
<script src="/js/like.js"></script>
<script>
    $(document).ready(function() {
        $('.load-product').hide();
        $(".load-product").slice(0, 12).show();
        if ($(".load-product:hidden").length != 0) {
            $("#loadMore").show();
        }   
        console.log($('.load-product:hidden').length);
        $("#loadMore").on('click', function (e) {
            e.preventDefault();
            $(".load-product:hidden").slice(0, 16).slideDown();
            if ($(".load-product:hidden").length == 0) {
                $("#loadMore").fadeOut('slow');
            }
        });
    });
</script>