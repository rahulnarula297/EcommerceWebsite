<section id="bestselling">
    <div class="bestselling-heading" data-aos="zoom-in"  data-aos-offset="125" data-aos-delay="100"  data-aos-duration="1000"> 
        <h1>bestselling items</h1>
    </div>

    <div class="best-seller-container responsive" data-aos="zoom-in"  data-aos-offset="125" data-aos-delay="100"  data-aos-duration="1000">
            <!-- FOR EACH LOOP ..ARRAY FROM HOME CONTROLLER  -->
            <% for(product of bestProducts) { %>
                <div>
                    <%- include('_product-card.ejs'); %>
                </div>
            <% } %>
    </div>
</section>

<section id="top-reviews">
    <div class="top-reviews">
        <div class="head bestselling-heading" data-aos="zoom-in"  data-aos-offset="125" data-aos-delay="100"  data-aos-duration="1000">
            <h1>Top Reviews</h1>
        </div>
        <div class="best-seller-container review-main responsive" id="review-box" data-aos="zoom-in"  data-aos-offset="125" data-aos-delay="100"  data-aos-duration="1000">
            <% for(review of reviews) { %>
                <%- include('_review.ejs'); %>
            <% } %>
        </div>      
    </div>
</section>

<section id="members-list">
    <div class="member-head" data-aos="zoom-in"  data-aos-offset="125" data-aos-delay="100"  data-aos-duration="1000">
        <h1> Our Bakery Chef's</h1>
    </div>
    <div class="member-table" data-aos="zoom-in"  data-aos-offset="125" data-aos-delay="100"  data-aos-duration="1000">
        <% profiles.forEach(function(profile){%>
            <div class="member">
                <div class="member-pic">
                    <img src="<%=profile.profileimage%>" alt="member-pic">
                </div>
                <div class="member-info">
                    <div class="name">
                        <h2><a href="/member-profile/<%=profile._id%>"><%=profile.firstname %> </a></h2>
                    </div>
                    <div class="experience">
                        <h3><%=profile.bakeryname%> </h3>
                    </div>
                    <div class="specialisation">
                        <h3><%=profile.description%> </h3>
                    </div>
                </div>
            </div>
        <%})%>
    </div>
</section>

