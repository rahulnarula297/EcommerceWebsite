    var subtext='just try us once and we gaurentee , you will defenitely come again .....designer luxurious cakes at your doorstep just a click away';
    
         function typing(){
            if(i < text.length){
                document.getElementById("text").innerHTML += text.charAt(i);
                i++;
                setTimeout(typing, 100);
            }
            document.getElementById("text").classList.add("banner-h2");
        }
